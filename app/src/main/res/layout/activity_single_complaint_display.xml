<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".studentFragment.SingleComplaintDisplay">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#112D4E"
        app:contentInsetStartWithNavigation="0dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:onClick="Back"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginLeft="180dp"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icontext"
                android:gravity="end"
                android:textAlignment="viewEnd" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/student_image"
                android:layout_width="91dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/profiledp"
                android:onClick="Preview2"/>

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_text"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Anonomous"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_admission_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_text"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Roll Number :"
                android:textSize="17sp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E3E8F2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="HEADING"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/complaint_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_text"
                                android:fontFamily="@font/montserrat"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E3E8F2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="CONTENT"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/complaint_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_text"
                                android:fontFamily="@font/montserrat"
                                android:padding="1dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:id="@+id/complaint_image"
                        android:layout_width="339dp"
                        android:layout_height="176dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="20dp"
                        android:onClick="Preview"
                        android:src="@drawable/sample_pic03" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E3E8F2"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/montserrat"
                                android:text="DETAILS :"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/complaint_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat"
                                android:text="Status :Turned Down "
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/complaint_public_private"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:layout_marginTop="6dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat"
                                android:text="Private "
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/complaint_upvote_pic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/like_and_love_icon_vector_generated" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/complaint_upvotes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Upvotes : 0"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#E3E8F2"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:background="#E3E8F2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="#2B4E78"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="COMMENT BOX"
                                android:textColor="@color/white"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_text"
                                android:fontFamily="@font/montserrat"
                                android:padding="10dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>