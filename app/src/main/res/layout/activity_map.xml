<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="26.74237528109589"
        mapbox:mapbox_cameraTargetLng="83.37420752188355"
        mapbox:mapbox_cameraZoom="12"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="296dp"
        android:layout_height="62dp"
        android:background="@drawable/startnavigation"
        android:enabled="false"
        android:visibility="invisible"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toStartOf="@+id/gotoButton"
        mapbox:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gotoButton"
        android:layout_width="108dp"
        android:layout_height="66dp"
        android:background="@drawable/goto_button"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>